        </dd>

    </dl>
</div>

<h4>Responsables</h4>
<div>
    <table class="table">
        <tr>
            <th>Nombre</th>
            <th>Carrera</th>
            <th>Carné</th>
        </tr>
        @foreach (var item in Model.assignees)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Major)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ucard)
                </td>
            </tr>
        }
    </table>
</div>



@if (@User.IsInRole("admin"))
{
    <p>
    
        @if (ViewBag.myProjectID != null)
        {
            @Html.ActionLink("Regresar a Editar-Proyecto", "Edit", "Project", new { id = (int)ViewBag.myProjectID }, null)
        }
        else {
            @Html.ActionLink("Regresar a Tareas", "Index")

        }
    </p>
}
else {

    if (ViewBag.myProjectID != null)
    {}
    else {
         <p>
           @Html.ActionLink("Regresar a Tareas", "Index")
        </p>
    }

}